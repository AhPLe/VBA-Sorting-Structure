Function ConvertI(ByVal curString As String) As Integer
    Dim dummyRow As Integer
    dummyRow = 1
    'Dim curBook As Workbook
    'Dim curSheet As Worksheet
    'Set curBook = Workbooks(workbookName)
    'Set curSheet = Worksheets(worksheetName)
    curString = curString & CStr(dummyRow)
    ConvertI = Range(curString).Column
End Function


Function GetIDInt() As Integer
    GetIDInt = ConvertI(tubeBookArr(curID))
End Function

Function GetTRInt() As Integer
    GetTRInt = ConvertI(tubeBookArr(curTR))
End Function

Function GetStarDInt() As Integer
    GetStarDInt = ConvertI(tubeBookArr(curStarD))
End Function

Function GetEndDInt() As Integer
    GetEndDInt = ConvertI(tubeBookArr(curEndD))
End Function

Function GetActEDInt() As Integer
    'GetActEDInt = ConvertI(GetActED)
    GetActEDInt = ConvertI(tubeBookArr(curActED))
End Function

Function GetCyclInt() As Integer
    GetCyclInt = ConvertI(tubeBookArr(curCycl))
End Function

Function GetChamInt() As Integer
    GetChamInt = ConvertI(tubeBookArr(curCham))
End Function

Function GetAlloyInt() As Integer
    GetAlloyInt = ConvertI(tubeBookArr(curAlloy))
End Function

Function GetCyclTInt() As Integer
    GetCyclTInt = ConvertI(tubeBookArr(curCyclT))
End Function

Function GetNumCoupons() As Integer
    GetNumCoupons = numCoupons
End Function


