    GetWorkbookName = workbookName
End Function

Public Function GetWorksheetName() As String
    GetWorksheetName = worksheetName
End Function

Public Function GetStartRowI() As Integer
    GetStartRowI = startRowI
End Function

Public Sub SetID(columnName As String)
    tubeBookArr(curID) = columnName
End Sub

Public Sub SetTR(columnName As String)
    tubeBookArr(curTR) = columnName
End Sub

Public Sub SetStarD(columnName As String)
    tubeBookArr(curStarD) = columnName
End Sub

