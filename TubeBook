Option Explicit
'TubeBook'

Const numColumns As Integer = 9
Const curID As Integer = 1
Const curTR As Integer = 2
Const curStarD As Integer = 3
Const curEndD As Integer = 4
Const curActED As Integer = 5
Const curCycl As Integer = 6
Const curCham As Integer = 7
Const curAlloy As Integer = 8
Const curCyclT As Integer = 9
Const dummyRow As Integer = 1

Const numCoupons As Integer = 6

Private workbookName As String
Private worksheetName As String
Private startRowI As Integer
Private tubeBookArr(numColumns) As String


Private Sub Class_Initialize()
    'no code needed here yet
End Sub

Public Function InitializeTubeBook(initialWkBkNm As String, initialWkShNm As String, initialStartRowI As Integer) As TubeBook
    
    workbookName = initialWkBkNm
    worksheetName = initialWkShNm
    startRowI = initialStartRowI
End Function


Private Sub Class_Terminate()
    Erase tubeBookArr
End Sub

